<div class="author">
  <h1 class="author__heading">Search Results</h1>
</div>

<section class="articles">
  <div class="cards-container">
    <% blogs.forEach(blog => { %>
    <div class="card">
      <img
        src="/<%= blog.image %>"
        alt="<%= blog.title %>"
        class="card-image"
      />
      <div class="card-content">
        <h3 class="card-title"><%= blog.title %></h3>
        <p class="card-description"><%= blog.description %></p>
        <p class="card-date">
          <%= new Date(blog.publishDate).toDateString() %>
        </p>
        <a href="/blog/<%= blog.slug %>" class="read-more-btn">Read More</a>
      </div>
    </div>
    <% }) %>
  </div>
</section>
