<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="#">Blog Admin Panel</a>
        <a href="/auth/logout" class="btn btn-outline-light">Logout</a>
      </div>
    </nav>

    <div class="container mt-4">
      <div class="row mb-4">
        <div class="col">
          <h2>Dashboard</h2>
        </div>
        <div class="col text-end">
          <a href="/admin/blog/add" class="btn btn-primary">Add New Blog</a>
          <a href="/admin/category/add" class="btn btn-success"
            >Add New Category</a
          >
        </div>
      </div>

      <!-- Blogs Section -->
      <div class="card mb-4">
        <div class="card-header">
          <h4>Available Blogs</h4>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Category</th>
                  <th>Author</th>
                  <th>Date</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% blogs.forEach(blog => { %>
                <tr>
                  <td><%= blog.title %></td>
                  <td><%= blog.category.name %></td>
                  <td><%= blog.author %></td>
                  <td><%= new Date(blog.createdAt).toLocaleDateString() %></td>
                  <td>
                    <a
                      href="/admin/blog/edit/<%= blog._id %>"
                      class="btn btn-sm btn-warning"
                      >Edit</a
                    >
                    <a
                      href="/admin/blog/delete/<%= blog._id %>"
                      class="btn btn-sm btn-danger"
                      onclick="return confirm('Are you sure?')"
                      >Delete</a
                    >
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Categories Section -->
      <div class="card">
        <div class="card-header">
          <h4>Available Categories</h4>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% categories.forEach(category => { %>
                <tr>
                  <td><%= category.name %></td>
                  <td><%= category.description %></td>
                  <td>
                    <a
                      href="/admin/category/edit/<%= category._id %>"
                      class="btn btn-sm btn-warning"
                      >Edit</a
                    >
                    <a
                      href="/admin/category/delete/<%= category._id %>"
                      class="btn btn-sm btn-danger"
                      onclick="return confirm('Are you sure?')"
                      >Delete</a
                    >
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
