<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Sidebar and Content -->
    <div class="d-flex">
      <!-- Sidebar -->
      <div class="sidebar" id="sidebar" style="width: 250px">
        <div>
          <a href="#" data-page="viewBlogs">View Blogs</a>
          <a
            href="#"
            data-bs-toggle="modal"
            data-bs-target="#addBlogModal"
            data-page="addBlogs"
            >Add Blog</a
          >
          <a href="#" data-page="viewCategories">View Categories</a>
          <a
            href="#"
            data-bs-toggle="modal"
            data-bs-target="#addCategoryModal"
            data-page="addCategories"
            >Add Category</a
          >
        </div>
        <div>
          <!-- Logout Button -->
          <form action="/auth/logout" method="POST">
            <button type="submit" class="btn btn-danger w-100">Logout</button>
          </form>
        </div>
      </div>

      <!-- Main Content Area -->
      <div class="content p-4" id="contentArea" style="flex-grow: 1">
        <div id="defaultContent">
          <div class="container text-center mt-5">
            <h1 class="display-4 text-danger">Welcome to Admin Panel</h1>
            <p class="lead text-muted">Select Actions from sidebar!</p>
          </div>          
        </div>
        <div id="dynamicContent" class="d-none">
          <!-- Dynamic content will be injected here -->
        </div>
      </div>
    </div>

    <!-- Modals -->
    <%- include('../admin/modals') %>
    <!-- Bootstrap JS and Dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      
    </script>
  </body>
</html>
